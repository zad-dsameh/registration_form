<odoo>
    <data>
        <template id="signup_phone_field" inherit_id="auth_signup.fields">
            auth_signup.fields
            <xpath expr="//input[@type='text']" position="after">
                <div class="form-group field-phone_number">
                    <label for="phone_number">Your Phone Number</label>
                    <input type="number" name="phone_number" t-att-value="phone_number" id="phone_number"
                           class="form-control form-control-sm" placeholder="e.g. 01234324543"
                           required="required" t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>